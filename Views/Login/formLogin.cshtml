@model SistemaDeCadastroEmp.ViewModel.LoginViewModel

@{
    ViewData["Title"] = "Login";
    Layout = "_AuthLayout";
}

<div class="container mt-5" style="max-width:400px;">
    <h3 class="text-center mb-4">@ViewData["Title"]</h3>

    <form asp-action="Login" method="post">
        <div class="mb-3">
            <label asp-for="Email" class="form-label"></label>
            <input asp-for="Email" class="form-control" placeholder="Digite seu e-mail" />
            <span  asp-asp-validation-for="Email" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Senha" class="form-label"></label>
            <input asp-for="Senha" class="form-control" placeholder="Digite sua senha" />
            <span  asp-validation-for="Senha" class="text-danger"></span>
        </div>

        <div class="form-check mb-3">
            <input asp-for="LembrarMe" class="form-check-input" />
            <label asp-for="LembrarMe" class="form-check-label"></label>
        </div>

        <button type="submit" class="btn btn-primary w-100">Entrar</button>

        <div class="mt-3 text-center">
            <a  asp-action="RegistrarForm">Criar uma Conta</a>
        </div>
    </form>

    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</div>