@model SistemaDeCadastroEmp.ViewModel.RegistrarViewModel

@{
    ViewData["Title"] = "Registrar";
    Layout = "_AuthLayout";
}

<div class="container mt-5" style="max-width:400px;">
    <h3 class="text-center mb-4">@ViewData["Title"]</h3>

    <form asp-action="Registrar" method="post">
        <div class="mb-3">
            <label asp-for="Email" class="form-label"></label>
            <input asp-for="Email" class="form-control" placeholder="Digite seu e-mail" />
            <span  asp-asp-validation-for="Email" class="text-danger"></span>
        </div>
@* asp-validation-for="Email" *@
        <div class="mb-3">
            <label asp-for="Senha" class="form-label"></label>
            <input asp-for="Senha" class="form-control" placeholder="Digite sua senha" />
            <span  asp-validation-for="Senha" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="ConfirmSenha" class="form-label"></label>
            <input asp-for="ConfirmSenha" class="form-control" placeholder="Digite sua senha" />
            <span  asp-validation-for="ConfirmSenha" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary w-100">Criar Conta</button>

        <div class="mt-3 text-center">
            <a asp-action="formLogin">Entrar</a>
        </div>
    </form>

    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</div>